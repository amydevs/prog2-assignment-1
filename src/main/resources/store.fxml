<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane xmlns:fx="http://javafx.com/fxml" hgap="10" vgap="10" fx:controller="StoreController">
    <Label text="Product" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <Text text="${controller.store.product.name}" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Stock" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <Text fx:id="stockTxt" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Price" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <Text fx:id="priceTxt" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Sell" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField text="0" fx:id="amountTf" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Button text="Sell" fx:id="sellBtn" GridPane.halignment="RIGHT" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="Cash" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <Text fx:id="cashTxt" GridPane.columnIndex="1" GridPane.rowIndex="5" />
</GridPane>